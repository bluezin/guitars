<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div style="margin-top: 20px">
  <%= form_with url: session_path do |form| %>
    <%= form.email_field :email_address, style: "margin-bottom: 10px; padding: 5px; font-size: 16px; width: 50%", required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email", value: params[:email_address] %><br>
    <%= form.password_field :password, style: "padding: 5px; font-size: 16px; width: 50%", required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %><br>
    <%= form.submit "Sign in", class: "button-primary" %>
  <% end %>
</div>

<div style="margin-bottom: 70px;">
  <%= link_to "Forgot password?", new_password_path, class: "button-secondary" %>
</div>
